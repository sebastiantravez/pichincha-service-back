<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">


    <changeSet id="1650738444953-1" author="sebastian.travez">
        <createTable tableName="persons">
            <column name="person_id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="pk_person_id"></constraints>
            </column>
            <column name="full_name" type="VARCHAR(200)"></column>
            <column name="gender_person" type="VARCHAR(50)"></column>
            <column name="age" type="INTEGER"></column>
            <column name="dni" type="VARCHAR(20)"></column>
            <column name="identification_pattern" type="VARCHAR(50)"></column>
            <column name="address" type="VARCHAR(250)"></column>
            <column name="phone" type="VARCHAR(50)"></column>
            <column name="create_date" type="timestamp"></column>
        </createTable>
        <addUniqueConstraint tableName="persons" columnNames="dni"></addUniqueConstraint>
    </changeSet>
    <changeSet id="1650738689971-2" author="sebastian.travez">
        <createTable tableName="clients">
            <column name="client_id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="pk_client_id"></constraints>
            </column>
            <column name="person_id" type="UUID"></column>
            <column name="password" type="VARCHAR(100)"></column>
            <column name="status" type="BOOLEAN" defaultValueBoolean="true"></column>
        </createTable>
        <addForeignKeyConstraint baseTableName="clients" baseColumnNames="person_id" constraintName="fk_person_id"
                                 referencedTableName="persons"
                                 referencedColumnNames="person_id"></addForeignKeyConstraint>
    </changeSet>
    <changeSet id="1650759047974-3" author="sebastian.travez">
        <createTable tableName="accounts">
            <column name="account_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_accounts"/>
            </column>
            <column name="account_number" type="VARCHAR(100)"/>
            <column name="account_type" type="VARCHAR(20)"/>
            <column name="initial_amount" type="numeric(16, 6)" defaultValueComputed="0.00"/>
            <column name="status" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="client_id" type="UUID"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="client_id" baseTableName="accounts"
                                 constraintName="FK_ACCOUNTS_ON_CLIENT" referencedColumnNames="client_id"
                                 referencedTableName="clients"/>
        <addUniqueConstraint tableName="accounts" columnNames="account_number"></addUniqueConstraint>
    </changeSet>
    <changeSet id="1650759047974-4" author="sebastian.travez">
        <addUniqueConstraint tableName="accounts" columnNames="account_type, client_id"></addUniqueConstraint>
    </changeSet>
    <changeSet id="1650766840959-5" author="sebastian.travez">
        <createTable tableName="movements">
            <column name="movement_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_movements"/>
            </column>
            <column name="movement_date" type="timestamp"/>
            <column name="movement_type" type="VARCHAR(20)"/>
            <column name="transaction_type" type="varchar(20)"/>
            <column name="observation" type="VARCHAR(255)"/>
            <column name="movement_amount" type="numeric(16, 6)"/>
            <column name="balance_available" type="numeric(16, 6)"/>
            <column name="account_id" type="UUID"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="account_id" baseTableName="movements"
                                 constraintName="FK_MOVEMENTS_ON_ACCOUNT" referencedColumnNames="account_id"
                                 referencedTableName="accounts"/>
    </changeSet>

</databaseChangeLog>
